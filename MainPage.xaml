<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="false"
             x:Class="ArbeitsstundenXML.MainPage">


    <Grid RowDefinitions="auto, auto, auto, auto, auto" 
          ColumnDefinitions="auto, auto, auto, auto, auto">
        <Label Text="{Binding Test}" />



        
    </Grid>
    <StackLayout>
        <Entry Grid.Column="0" Grid.Row="0" Text="{Binding Username}" />
        <Entry Grid.Row="1" Grid.Column="1" Text="{Binding Password}" />

        <Button Grid.Row="2" Grid.Column="2" Text="Commit" Clicked="change" />
        <TextBlock Grid.Row="3" Grid.Column="3"  Text=""  />
        <TextBlock Grid.Row="4" Grid.Column="4"  Text=""/>
    </StackLayout>
   

</ContentPage>

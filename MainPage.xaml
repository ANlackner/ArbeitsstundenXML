<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="false"
             x:Class="ArbeitsstundenXML.MainPage">



    <StackLayout>
        <Entry x:Name="inputEntry" Placeholder="Gib deinen Usernamen ein" />
        <Entry x:Name="inputPassword" Placeholder="Gib dein Passwort ein" />
        <Button Text="anmelden" Clicked="OnSaveButtonClicked"/>
        <Button Text="registrieren" Clicked="OnSaveButtonClicked"  />
        <Label x:Name="outputLabel" />

        <Entry Text="{Binding Hours}" x:Name="hours" Placeholder="Geben Sie ihre Stunden ein:" IsVisible="False" />
        <Button x:Name="commit" Text="FERTIG" IsVisible="false" Command="{Binding FertigCommand}"> </Button>


        <Label Text="{Binding Fehler}" />
    </StackLayout>


</ContentPage>
